<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="patDetailPane" prefHeight="600" prefWidth="900" stylesheets="@patCss.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.patDetailController">
   <children>
      <Label layoutX="342.0" layoutY="46.0" text="患者详细信息">
         <font>
            <Font name="Calibri Bold" size="36.0" />
         </font>
      </Label>
      <Button layoutX="704.0" layoutY="556.0" mnemonicParsing="false" onMouseClicked="#DetailRet" prefHeight="41.0" prefWidth="196.0" text="  返        回  ">
         <font>
            <Font name="Calibri" size="24.0" />
         </font>
      </Button>
      <TabPane fx:id="tabpane" layoutX="50.0" layoutY="94.0" prefHeight="415.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="medicalRecords" text="就诊记录">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="recordTable" prefHeight="290.0" prefWidth="800.0">
                          <columns>
                            <TableColumn fx:id="dateCol" prefWidth="150.0" text="日期" />
                            <TableColumn fx:id="depCol" prefWidth="100.0" text="科室" />
                              <TableColumn fx:id="docCol" prefWidth="100.0" text="医生" />
                              <TableColumn fx:id="rsCol" prefWidth="450.0" text="诊断结果" />
                          </columns>
                        </TableView>
                        <Button layoutX="312.0" layoutY="302.0" mnemonicParsing="false" onMouseClicked="#printMedicalRecords" text="打印就诊记录">
                           <font>
                              <Font name="Calibri" size="24.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="payRecords" text="消费记录">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="payTable" prefHeight="320.0" prefWidth="352.0">
                           <columns>
                              <TableColumn fx:id="payDateCol" minWidth="200.0" prefWidth="75.0" text="日期" />
                              <TableColumn fx:id="payAmountCol" minWidth="150.0" prefWidth="75.0" text="金额" />
                           </columns>
                        </TableView>
                        <Button layoutX="486.0" layoutY="139.0" mnemonicParsing="false" onMouseClicked="#printPaymentRecords" text="打印消费记录">
                           <font>
                              <Font name="Calibri" size="24.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
